<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<import resource="datasource.xml" />
	
	<bean class="com.xworkz.integration.Service" id="service">
	<constructor-arg ref="dao"></constructor-arg>
	</bean>

	<bean id="dao" class=" com.xworkz.integration.dao.CoronaVaccineDAO">
		<constructor-arg ref="orm"></constructor-arg>
	</bean>

	<bean id="orm"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="DriverManagerDataSource"></property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
				<prop key="hibernate.show_sql">true</prop>
			</props>
		</property>
		<property name="annotatedClasses">
			<list>
				<value>com.xworkz.integration.dto.CoronaVaccine</value>
			</list>
		</property>
	</bean>

</beans>